  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/projects/app",
      "skipFiles": [
        "${workspaceFolder}/projects/**/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/projects/app",
      "remoteRoot": "/app",
      "skipFiles": [
        "${workspaceFolder}/projects/**/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}